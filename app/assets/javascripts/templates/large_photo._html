<h2><%= name %></h2>
<img src="<%= largeUrl %>" width="<%= largeWidth %>" height="<%= largeHeight %>" alt="<%= name %>" title="<%= name %>"/>
<div>
  <%= description %>
  <a href="<%= rawUrl %>">Original</a>
  <div class="tags">
    Tags:
    <ul>
      <% _(tags).each(function (tag) { %>
        <li><%= tag %></li>
      <% }); %>
    </ul>
    <% if (PhotosApp.currentUser.get('authorized')) { %>
      <a href="#" class="add_tag">+</a>
    <% } %>
  </div>
</div>
